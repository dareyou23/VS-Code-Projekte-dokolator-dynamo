AWSTemplateFormatVersion: '2010-09-09'
Transform: AWS::Serverless-2016-10-31
Description: Dokolator DynamoDB Backend mit JWT Authentication

Globals:
  Function:
    Timeout: 10
    Runtime: nodejs20.x
    MemorySize: 128
    Environment:
      Variables:
        GAMES_TABLE: !Ref GamesTable
        JWT_SECRET: '{{resolve:ssm:/dokolator/jwt-secret:2}}'

Resources:
  # API Gateway mit expliziter CORS-Konfiguration
  DokolatorApi:
    Type: AWS::Serverless::Api
    Properties:
      StageName: Prod
      Cors:
        AllowMethods: "'GET,POST,PUT,DELETE,OPTIONS'"
        AllowHeaders: "'Content-Type,Authorization,X-Amz-Date,X-Api-Key,X-Amz-Security-Token'"
        AllowOrigin: "'*'"
        MaxAge: "'600'"

  # DynamoDB Tabelle (Single Table Design)
  GamesTable:
    Type: AWS::DynamoDB::Table
    Properties:
      TableName: DokolatorGames
      BillingMode: PROVISIONED
      ProvisionedThroughput:
        ReadCapacityUnits: 1
        WriteCapacityUnits: 1
      AttributeDefinitions:
        - AttributeName: PK
          AttributeType: S
        - AttributeName: SK
          AttributeType: S
        - AttributeName: GSI1PK
          AttributeType: S
        - AttributeName: GSI1SK
          AttributeType: S
      KeySchema:
        - AttributeName: PK
          KeyType: HASH
        - AttributeName: SK
          KeyType: RANGE
      GlobalSecondaryIndexes:
        - IndexName: GSI1
          KeySchema:
            - AttributeName: GSI1PK
              KeyType: HASH
            - AttributeName: GSI1SK
              KeyType: RANGE
          Projection:
            ProjectionType: ALL
          ProvisionedThroughput:
            ReadCapacityUnits: 1
            WriteCapacityUnits: 1
      SSESpecification:
        SSEEnabled: true
        SSEType: KMS
      PointInTimeRecoverySpecification:
        PointInTimeRecoveryEnabled: true
      DeletionProtectionEnabled: true

  # Lambda Authorizer
  AuthorizerFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: authorizer.handler
      Environment:
        Variables:
          JWT_SECRET: '{{resolve:ssm:/dokolator/jwt-secret:2}}'
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/authorizer.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Authentication (Login, Logout, Refresh, Reset Password)
  AuthFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: auth.handler
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref GamesTable
      Events:
        Login:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /auth/login
            Method: post
            Auth:
              Authorizer: NONE
        Logout:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /auth/logout
            Method: post
            Auth:
              Authorizer: NONE
        Refresh:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /auth/refresh
            Method: post
            Auth:
              Authorizer: NONE
        ResetPassword:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /auth/reset-password
            Method: post
            Auth:
              Authorizer: NONE
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/auth.ts
        External:
          - "@aws-sdk/*"

  # Lambda: User Management (Admin only)
  UserManagementFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: user.handler
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref GamesTable
      Events:
        CreateUser:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /users
            Method: post
        ListUsers:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /users
            Method: get
        DeleteUser:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /users/{userId}
            Method: delete
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/user.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Password Change
  PasswordFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: password.handler
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref GamesTable
      Events:
        ChangePassword:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /auth/change-password
            Method: post
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/password.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Spieltag erstellen
  CreateSpieltagFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: spieltag.createSpieltag
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref GamesTable
      Events:
        CreateSpieltag:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage
            Method: post
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/spieltag.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Alle Spieltage abrufen
  ListSpieltageFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: spieltag.listSpieltage
      Policies:
        - DynamoDBReadPolicy:
            TableName: !Ref GamesTable
      Events:
        ListSpieltage:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage
            Method: get
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/spieltag.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Einzelnen Spieltag abrufen
  GetSpieltagFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: spieltag.getSpieltag
      Policies:
        - DynamoDBReadPolicy:
            TableName: !Ref GamesTable
      Events:
        GetSpieltag:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage/{spieltagId}
            Method: get
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/spieltag.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Spieltag abschließen
  CompleteSpieltagFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: spieltag.completeSpieltag
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref GamesTable
      Events:
        CompleteSpieltag:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage/{spieltagId}/complete
            Method: put
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/spieltag.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Entnahme/Einzahlung aktualisieren
  UpdateEntnahmeFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: spieltag.updateEntnahme
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref GamesTable
      Events:
        UpdateEntnahme:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage/{spieltagId}/entnahme
            Method: put
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/spieltag.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Spiel hinzufügen
  AddGameFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: game.addGame
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref GamesTable
      Events:
        AddGame:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage/{spieltagId}/games
            Method: post
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/game.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Spiel aktualisieren
  UpdateGameFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: game.updateGame
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref GamesTable
      Events:
        UpdateGame:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage/{spieltagId}/games/{gameId}
            Method: put
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/game.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Spiel löschen
  DeleteGameFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: game.deleteGame
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref GamesTable
      Events:
        DeleteGame:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage/{spieltagId}/games/{gameId}
            Method: delete
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/game.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Spiele eines Spieltags abrufen
  ListGamesFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: game.listGames
      Policies:
        - DynamoDBReadPolicy:
            TableName: !Ref GamesTable
      Events:
        ListGames:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage/{spieltagId}/games
            Method: get
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/game.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Gesamt-Statistiken
  GetStatsFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: stats.getStats
      Policies:
        - DynamoDBReadPolicy:
            TableName: !Ref GamesTable
      Events:
        GetStats:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /stats
            Method: get
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/stats.ts
        External:
          - "@aws-sdk/*"

  # Lambda: Spieltag-Statistiken
  GetSpieltagStatsFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: stats.getSpieltagStats
      Policies:
        - DynamoDBReadPolicy:
            TableName: !Ref GamesTable
      Events:
        GetSpieltagStats:
          Type: Api
          Properties:
            RestApiId: !Ref DokolatorApi
            Path: /spieltage/{spieltagId}/stats
            Method: get
    Metadata:
      BuildMethod: esbuild
      BuildProperties:
        Minify: false
        Target: es2020
        Sourcemap: false
        EntryPoints:
          - src/handlers/stats.ts
        External:
          - "@aws-sdk/*"

Outputs:
  ApiUrl:
    Description: "API Gateway URL"
    Value: !Sub "https://${DokolatorApi}.execute-api.${AWS::Region}.amazonaws.com/Prod/"
  GamesTableName:
    Description: "DynamoDB Tabelle"
    Value: !Ref GamesTable
